<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Camera Permission -->
    <key>NSCameraUsageDescription</key>
    <string>DIET Capture needs camera access for RGB and LiDAR data capture.</string>
    
    <!-- Photo Library Permission -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>DIET Capture needs photo library access to save captured images and videos.</string>
    
    <!-- Location Permission (optional, for geotagging) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>DIET Capture can use your location to geotag captured data.</string>
    
    <!-- Required Device Capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arkit</string>
        <string>iphone-ipad-minimum-performance-a12</string>
    </array>
    
    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>
    
    <!-- Launch Screen -->
    <key>UILaunchScreen</key>
    <dict>
        <key>UIColorName</key>
        <string>AccentColor</string>
        <key>UIImageName</key>
        <string></string>
    </dict>
    
    <!-- Status Bar -->
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>
    
    <!-- Background Modes (for extended recording) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>processing</string>
    </array>
    
    <!-- App supports Files app document browser -->
    <key>UISupportsDocumentBrowser</key>
    <true/>
    
    <!-- iTunes file sharing for accessing capture sessions -->
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
</dict>
</plist>
